<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gamebox_idtkown.views.widgets.GBActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <RelativeLayout
        android:id="@id/section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar"
        android:background="@color/white">

        <com.gamebox_idtkown.views.widgets.GBUserInfoItem
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            gb:text="头像" />

        <com.gamebox_idtkown.views.widgets.GBUserInfoItem
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_hieght"
            android:layout_below="@+id/avatar"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            gb:text="昵称" />

        <com.gamebox_idtkown.views.widgets.GBUserInfoItem
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_hieght"
            android:layout_below="@+id/nickname"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            gb:text="性别" />

        <com.gamebox_idtkown.views.widgets.GBUserInfoItem
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_hieght"
            android:layout_below="@+id/sex"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            gb:text="邮箱"></com.gamebox_idtkown.views.widgets.GBUserInfoItem>

        <com.gamebox_idtkown.views.widgets.GBUserInfoItem
            android:id="@+id/qq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_hieght"
            android:layout_below="@+id/email"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            gb:text="QQ"></com.gamebox_idtkown.views.widgets.GBUserInfoItem>

        <com.gamebox_idtkown.views.widgets.GBUserInfoItem
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_hieght"
            android:layout_below="@+id/qq"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            gb:text="绑定手机号"></com.gamebox_idtkown.views.widgets.GBUserInfoItem>

        <com.gamebox_idtkown.views.widgets.GBUserInfoItem
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_hieght"
            android:layout_below="@+id/phone"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            gb:text="修改密码"></com.gamebox_idtkown.views.widgets.GBUserInfoItem>
    </RelativeLayout>
</RelativeLayout>